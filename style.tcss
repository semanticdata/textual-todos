Screen {
  layout: grid;
  grid-size: 3 1;
  grid-columns: 1fr 3fr 2fr;
  grid-rows: 1fr;
}

#task-list {
  border: solid $primary;
  height: 1fr;
  scrollbar-gutter: stable;
  # row-span: 2;
  padding: 0;
}

#task-table {
  height: 100%;
}

.completed {
  text-style: strike;
  color: $text-muted;
}

.dialog-buttons {
  height: auto;
  padding: 1;
  layout: horizontal;
  align: right middle;
}

.dialog-buttons > Button:last-child {
  margin-left: 2;
}

Button {
  border: none;
}

Button.error {
  background: $error;
  color: auto;
}

#edit-dialog,
#delete-dialog,
#settings-dialog {
  height: 100%;
  column-span: 2;
  border: solid $primary;
  background: $surface;
}

#delete-message {
  padding: 1 2;
}

#fields {
  height: auto;
  padding: 1;
}

#edit-title,
#edit-desc,
#edit-due-date,
#priority-select,
#theme-select,
#project-select,
#project-list,
#task-view,
#task-view-title,
#task-view-desc,
#task-view-due-date,
#task-view-project,
#task-view-status {
  border: solid $primary;
}

#task-table,
#task-view-title,
#task-view-desc,
#task-view-due-date,
#task-view-project,
#task-view-status,
#project-list {
  background: $background;
}

.project-label {
  padding: 0 0 0 1;
}

#edit-desc,
#task-view-desc {
  height: 1fr;
}

#theme-select {
  margin: 1 0;
}